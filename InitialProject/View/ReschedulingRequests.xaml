<Window x:Class="InitialProject.View.ReschedulingRequests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="ReschedulingRequests" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="reschedulingRequsts" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Content="Approve Requests" HorizontalAlignment="Left" Margin="610,236,0,0" VerticalAlignment="Top" Width="105" Height="65" Click="Button_Click"/>
        <Button Content="Decline Requests" HorizontalAlignment="Left" Margin="610,338,0,0" VerticalAlignment="Top" Height="56" Width="105" Click="Button_Click_1"/>
        <TextBox x:Name="comment" HorizontalAlignment="Left" Margin="75,236,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="210" Height="82"/>

    </Grid>
</Window>
